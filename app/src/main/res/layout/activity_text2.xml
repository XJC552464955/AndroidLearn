<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextActivity"
    android:background="@mipmap/bg">

    <!--
        android:textSize="20sp"   字体大小
        android:textColor="#ff0000"    字体颜色
        android:lineSpacingExtra="20sp"  行间距
        android:lineSpacingMultiplier="2" 行倍距，与lineSpacingExtra只能选一种
        android:singleLine="true" 一行显示
        android:lines="num"   num行显示，可以控制行数
        android:ellipsize="end"   设置省略号的位置，start开头，end结尾，marquee跑马灯，middle中间
        android:focusable="true"  设置可以设置焦点
        android:focusableInTouchMode="true" 设置触摸时可以获取焦点
        android:marqueeRepeatLimit="marquee_forever"  设置跑马灯的
    -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:text="@string/long_text"
        android:textColor="#00ff00"
        android:textSize="20sp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
></TextView>


</LinearLayout>